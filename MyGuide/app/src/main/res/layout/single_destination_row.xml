<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/activity_horizontal_margin"
    app:cardElevation="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/dest_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ktm"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kathmandu Valley"
            android:textSize="20sp"
            android:layout_below="@+id/dest_image"
            android:layout_centerHorizontal="true"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/dest_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="The capital city of Nepal"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_below="@+id/dest_name"
            android:layout_centerHorizontal="true" />




    </RelativeLayout>


</android.support.v7.widget.CardView>